            <td width="140px">
              <h3><%= pizarra.nombre %></h3>
            </td>
           </tr>
         </table>
       
       </td>
            
       <td id="tdIndex" align="center" >
          <%= date_last_aviso(pizarra) %>
       </td>
      
      </tr>
      

   <% end %>
   
   <tr><td colspan="2" id="paginate"><%= will_paginate %></td></tr> 
     
  </table>
  
  
 </div> 
