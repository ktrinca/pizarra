      <td align="center" style="border-bottom:solid 1px #7CE1E1;">
        
         <table style="margin-left:80px;">
          <tr>
            <td  >
               <%= link_to image_tag("/images/ver3.jpg", 
                                :title=> "Ver pizarra"), 
                                pizarra %>
