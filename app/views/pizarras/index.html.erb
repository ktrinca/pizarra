<% current_menu_item 'home'%>

<h2>Pizarras:</h2>

<!--#################### div buscador ##################### -->
  
  <div id="contentBuscador" > 
   
   <div id='separator'></div>
   
    <fieldset id="fieldsetBuscador" >
      <legend> B&uacute;squeda de Avisos </legend>
          <%= render   :partial    => "pizarraSearch" %>
   </fieldset>
    
     &nbsp;&nbsp;&nbsp;  
  
  </div>
  
  <!-- ############## Bloque Login ############ -->
   <div>   
     <%= render :partial=> "/sessions/new" %>
   </div>
  
  <!-- ############## FIN Bloque Login ############ --> 
  
  <div class='contentHome'>
    <table style="">
     <!-- ############## encabezado ############ -->
     <tr>
       <td align="center" style="width:260px">
          <%= text_header_index %>
       </td>
       <td style="width:280px">&nbsp;</td>
     </tr>
     
    <!-- ############## TD DETALLES PIZARRAS ############ -->
    
    <% for pizarra in @pizarras %>
