<% current_menu_item 'home'%>

<!--#################### div buscador ##################### -->
  <div style="padding-right:-100px;"><%= link_to 'Volver', pizarras_path %></div>
  <div id="contentBuscador" > 
   
   <div id='separator'></div>
   
    <fieldset id="fieldsetBuscador" >
      <legend> B&uacute;squeda de Avisos </legend>
          <%= render   :partial    => "pizarraSearch" %>
   </fieldset>
    
     &nbsp;&nbsp;&nbsp;  
  
  </div>

  <!-- ############## Bloque Login ############ -- >
   <div>   
     <%= render :partial=> "/sessions/new" %>
   </div>
  
  <!-- ############## FIN Bloque Login ############ -- > 
  
  <div class='contentHome'>
    <table border="0">
