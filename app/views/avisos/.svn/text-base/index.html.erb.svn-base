<h1>Listing avisos</h1>

<table>
  <tr>
    <th>Contenido</th>
    <th>Pizarra</th>
  </tr>

<% for aviso in @avisos %>
  <tr>
    <td><%=h aviso.contenido %></td>
    <td><%=h aviso.pizarra_id %></td>
    <td><%= link_to 'Show', 'show' %></td>
    <td><%= link_to 'Edit', 'edit' %></td>
    <td><%= link_to 'Destroy', 'destroy', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New aviso', new_pizarra_aviso_path %>
