<div class='contenedor'>
  <ul >
   <%= error_messages_for :user,
        :header_message => "No se pudo efectuar la Registraci&oacute;n",
        :message => "El problema para la registraci&oacute;n es con los siguientes campos." %>
  </ul>
 <fieldset id="fieldset">
 <legend id="SignIn"> Modificar Password </legend>
 <div id="formAdmin">
    <% form_for :user, :url => {:action => "reset_password"} do |form| %>
        
     
            <p>
                <label for="user_password" >Password</label><br/>
                <%= form.password_field :password, :size => 45, :class => 'text' %>
      </p>
      <div id="buttonLogin">
      </div>
      <p>
                <label for="user_password_confirmation" >Confirm Password</label><br/>
                <%= form.password_field :password_confirmation, :size => 45, :class => 'text' %>
      </p>
      <div id="buttonLogin">
      </div>
            
      <p>
          <div id="buttonLogin">
             &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
             <%= image_submit_tag "/images/mod_password.gif" %>  
         </div>
        </p>
        
    <% end %>
    
    </div>
  </fieldset> 
</div> 